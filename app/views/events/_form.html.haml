= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f|
  = f.input :user_id
  = f.input :start_at
  = f.input :hours
  = f.input :venue_id
  = f.input :title
  = f.input :description
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn'
